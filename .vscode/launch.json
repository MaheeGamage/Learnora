  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI app (no uv)",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "module": "fastapi",
      "args": ["dev", "core-service/app/main.py"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/core-service/app"
      }
    },
    {
      "name": "Debug Pytest - test_sample.py",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}/core-service",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "-s",
        "--tb=short"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/core-service"
      }
    }
  ]
}
